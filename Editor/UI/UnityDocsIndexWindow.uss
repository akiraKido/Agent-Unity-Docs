/* Root container */
.root {
    padding: 10px;
    flex-grow: 1;
}

/* Header */
.header {
    flex-direction: row;
    align-items: center;
    margin-bottom: 5px;
}

.title {
    font-size: 14px;
    -unity-font-style: bold;
}

.spacer {
    flex-grow: 1;
}

.spacer-small {
    height: 10px;
}

/* Language buttons */
.language-buttons {
    flex-direction: row;
}

.lang-btn {
    width: 30px;
    height: 20px;
    margin-left: 2px;
    padding: 2px 4px;
    font-size: 11px;
}

.lang-btn-active {
    background-color: rgb(0, 180, 180);
    color: white;
}

.lang-btn-inactive {
    background-color: rgb(80, 80, 80);
}

/* Info box */
.info-box {
    background-color: rgba(60, 120, 180, 0.2);
    border-radius: 3px;
    padding: 8px;
    margin-bottom: 10px;
    border-width: 1px;
    border-color: rgba(60, 120, 180, 0.4);
}

.info-box.small {
    padding: 4px 8px;
    margin-bottom: 5px;
}

.info-text {
    white-space: normal;
    font-size: 11px;
    color: rgb(200, 200, 200);
}

.info-text.small {
    font-size: 10px;
}

/* Section headers */
.section-header {
    font-size: 12px;
    -unity-font-style: bold;
    margin-top: 10px;
    margin-bottom: 5px;
}

/* Panels */
.panel {
    margin-bottom: 5px;
}

/* Toggle */
.toggle-field {
    margin-bottom: 5px;
}

/* Text fields */
.text-field {
    margin-bottom: 5px;
}

/* Dropdown field */
.dropdown-field {
    margin-bottom: 5px;
}

.text-field-stretch {
    flex-grow: 1;
    margin-right: 5px;
}

/* Field row */
.field-row {
    flex-direction: row;
    align-items: center;
    margin-bottom: 5px;
}

/* Browse button */
.browse-btn {
    width: 60px;
    height: 20px;
}

/* Hint label */
.hint-label {
    font-size: 10px;
    color: rgb(150, 150, 150);
    -unity-font-style: italic;
}

/* Status box */
.status-box {
    background-color: rgba(60, 120, 180, 0.15);
    border-radius: 3px;
    padding: 8px;
    margin-top: 10px;
    margin-bottom: 5px;
    border-width: 1px;
    border-color: rgba(60, 120, 180, 0.3);
    display: none;
}

.status-box-visible {
    display: flex;
}

.status-text {
    white-space: normal;
    font-size: 11px;
}

/* Progress bar */
.progress-bar {
    height: 20px;
    margin-bottom: 5px;
    display: none;
}

.progress-bar-visible {
    display: flex;
}

/* Button row */
.button-row {
    flex-direction: row;
    justify-content: center;
    margin-top: 5px;
}

/* Action buttons */
.action-btn {
    height: 25px;
    margin-top: 5px;
}

.generate-btn {
    height: 30px;
    -unity-font-style: bold;
}

.cancel-btn {
    display: none;
}

.cancel-btn-visible {
    display: flex;
}

.reset-btn {
    display: none;
}

.reset-btn-visible {
    display: flex;
}

/* Disabled state */
.disabled {
    opacity: 0.5;
}
